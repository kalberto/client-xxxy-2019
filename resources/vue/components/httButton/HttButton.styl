@import '~_util'

.button
    position relative; margin-bottom 15px; padding 0 15px; 
    &.action
        padding 0 5px; margin-bottom 0; 
    &[data-tooltip]
        &:before
            content attr(data-tooltip); position absolute; background $httLaranja; color #fff; padding 10px; bottom -40px; white-space: nowrap; visibility hidden;
            opacity 0; transition all 0.2s ease-in-out; right 0; border-radius 5px;
        &:hover
            &:before
                visibility: visible; opacity 1;

    button
        border none; background-color $httLaranja; border-radius 2px; background-size auto 35px; background-position center calc(-100% - 40px);
        background-repeat no-repeat; padding 0; overflow hidden; transition all .15s ease-in-out; cursor pointer; position relative;

        

        .texto
            display block; height 100%; line-height 50px; width 100%; color #fff; font-weight $font-medium; 
            text-transform uppercase; background-color $httLaranja; padding 0 25px; transition all .15s ease-in-out;

        &:disabled
            cursor not-allowed; opacity .5;
        &.action
            padding 10px 0; width 40px;
            img
                height 20px; margin 0 auto;
            &:hover
                box-shadow inset 0 0 10px rgba(#000, .4)

    &.animate
        button
            &:hover
                background-position center center; background-color darken($httLaranja, 3%);
                .texto
                    transform translateY(100%);

    &:not(.animate)
        button
            &:hover
                .texto
                    box-shadow inset 0 0 10px rgba(#000, .4)

+mobile-600()
    .button
        button 
            font-size: 14px;