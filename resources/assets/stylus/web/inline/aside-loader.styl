body
    overflow: hidden !important;
    &.hide
        overflow scroll !important;
        aside#loader
            opacity: 0; visibility hidden; filter blur(5px);

aside#loader
    background #fff; width 100%; height 110vh; overflow hidden; position fixed; z-index 100; top 0; left 0; transition all .5s ease-in-out;
    opacity 1; visibility visible;