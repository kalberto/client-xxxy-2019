@import '~_util'
aside#modalPredios
    width 100%; height 100vh; background rgba(#000, 0.5); position fixed; top 0; left 0; opacity 0; visibility hidden;
    transition all 0.5s ease-in-out; z-index -1; backdrop-filter grayscale(75%) contrast(75%); 
    .predios
        background #fff; height 70vh; width 70vw; position absolute; top 50%; left 50%; transform translate(-50%, -50%);
        border-radius 10px; padding 20px 40px;
        a
            position absolute; right 0px; top -35px;
            img
                width 30px;
    &.ativo
        opacity 1; visibility visible; z-index 3;