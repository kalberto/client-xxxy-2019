// Vari√°veis e Mixins
@import '~_util'

@keyframes animateBorder
	to
		transform rotate(360deg);

#pageLogin
	align-items center; justify-content center; height 100%; flex-direction: column; max-width: 400px; width 100% !important;
	margin: 0 auto; background: #fff; border-radius: 5px; height: 430px; box-shadow: 0 0 25px 5px rgba(0,0,0,0.5);
	form
		max-width 320px; width 100%; margin 0;
	.logo
		width: 100%; padding 20px 0 30px; transition all 0.2s ease-in-out; min-height 80px; margin-bottom: 30px;
		h1
			color transparent; font 0/0 a; line-height 0; height 0; 
		img 
			width: 100%; max-width 270px; margin 0 auto; display block; transition all 0.2s ease-in-out;

	.loader
		max-width 320px; width 100%; height 195px; display flex; align-items center; justify-content center;
		.load
			width 100px; height 100px; border-radius 50%; border 5px solid #ccc; border-top 5px solid #e75629; 
			animation: animateBorder 1s linear 0s infinite;