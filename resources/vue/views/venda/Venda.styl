@import '~_util'

h4
    font-size rem(14); margin 0 0 10px; padding 20px 15px; width 100%;

.message
    &.error
        color: #C00;

textarea
    resize none; margin 0 15px 15px; padding rem(12) 15px; width 100%;
    border 1px solid #ebebeb; font-size rem(16); transition all 0.2s ease-in-out
    height 150px; outline 0;
    &:focus
        border 1px solid $httLaranja

.verifyCliente
    align-items: flex-end; flex-direction column; justify-content center;
    p
        padding: 0 15px;

    .message
        visibility hidden; opacity 0; user-select none; transition all .2s ease-in-out; position: absolute; top: -20px; font-size: rem(12); 
        right: 15px; white-space nowrap;

    &.error, &.success
        .message
            visibility visible; opacity 1; user-select all;

    &.error
        .message
            color: #C00;
    
    &.success
        .message
            color: #090;

.faixas
    display flex; justify-content space-between; flex-flow row wrap; 
    .faixa
        display flex; flex-flow row wrap; width 100%; justify-content: flex-end;
 
.fieldset
    > .fieldset
        &:not(.produtos)
            padding 0 20px;

.observacoes
    padding 0 35px; list-style-type disc; margin-bottom 35px;
    li
        padding 5px 0;

.import
    background #fff; height 30vh; width 70vw; border-radius 10px; padding 40px 40px; position relative;
    label
        width 100%; height 70%; border 1px solid $httLaranja; display flex; align-items center; justify-content center;
        position relative; cursor pointer;
        input
            display none;
    span
        margin-top 10px; font-size rem(16); display block; vertical-align middle;
        img
            width 50px; margin 0 20px; display inline; vertical-align middle;
    p
        text-align right; color #C00; font-size rem(14); margin-top 10px
    

.arquivos
    justify-content: flex-start; width 100%; flex-flow row wrap;
    .arquivo
        max-width 30%; padding 15px; box-shadow 0 0 10px 10px rgba(#000, 0); transition all .2s ease-in-out; margin 15px; cursor pointer;
        position relative;
        img
            width 40px; margin 0 auto; margin-bottom 15px;
            &.download
                top 10px; right 10px; position absolute; width 20px;
        p
            font-size rem(14)
        &:hover
            box-shadow 0 0 10px 10px rgba(#000, 0.04)

.buttonDownloadHidden
    position absolute; visibility hidden; opacity 0; z-index -99; top -999px; left -999px

+tablet-768()
    .faixas
        max-width 100%
        .faixa
            max-width 100%;

    .totalWidth
        max-width 100%;