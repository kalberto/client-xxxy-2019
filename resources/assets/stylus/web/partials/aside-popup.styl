aside
	&#popup
		position: fixed; top: 0; left: 0; height: 100vh; width: 100vw; z-index: 10000; display: none; min-height: 675px;
		&:before
			content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: #000; opacity: .8
		&.ativo
			display: block;
		> div
			.pop_wrapper
				transform: translate3d(0, 0, 0); height: 100vh ; padding: 0 75px; position: relative; max-width: 1279px; margin: 0 auto
				padding: 0 20px; box-sizing: border-box
				a.fechar
					position: absolute; top: 22px; right: 22px; width: 20px; height: 20px; z-index: 10; opacity: .75; transition: all .2s ease-in-out
					svg
						position: relative; z-index: 2;
					&:before
						content: ''; background: radial-gradient(ellipse, rgba(black, 0.35), transparent 75%); position: absolute; top: -15px
						right: -15px; width: 50px; height: 50px
					&:hover
						opacity: 1;
				>div
					width: calc(50% - 150px); position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: #fff
					max-height: 70vh; padding: 25px; overflow: hidden